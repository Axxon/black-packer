{
    "description": "Create a fresh new VirtualMachine for your Black Project",
    "builders": [
        {
            "type": "vmware-iso",
            "guest_os_type": "debian7-64",
            "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
            "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
            "iso_checksum_type": "md5",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "sudo -S shutdown -h now",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "http_directory": "packer/support/http",
            "boot_wait": "10s",
            "disk_size": 10000,
            "vmx_data": {
                "memsize": 2048,
                "numvcpus": 1
            }
        },
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Debian_64",
            "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
            "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
            "iso_checksum_type": "md5",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "sudo -S shutdown -h now",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "http_directory": "packer/support/http",
            "boot_wait": "10s",
            "disk_size": 10000,
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "packer/support/config/",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant'| sudo -S sh '{{.Path}}'",
            "scripts": [
                "packer/support/scripts/base.sh",
                "packer/support/scripts/vagrant.sh",
                "packer/support/scripts/sources.sh",
                "packer/support/scripts/dotdeb.sh",
                "packer/support/scripts/composer.sh",
                "packer/support/scripts/mariadb.sh",
                "packer/support/scripts/mongo.sh",
                "packer/support/scripts/apache.sh",
                "packer/support/scripts/zerodisk.sh",
                "packer/support/scripts/clean.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "packer/box/black-{{.Provider}}.box"
        }
    ]
}
